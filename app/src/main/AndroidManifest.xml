<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.vandamodaintima.jfpsb.contador">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/TabAppTheme"
        tools:replace="android:theme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".tela.manager.contagem.TelaContador"
            android:label="Gerenciar Contagens"
            android:theme="@style/TabAppTheme.NoActionBar" />
        <activity
            android:name=".tela.manager.produto.TelaProduto"
            android:label="Gerenciar Produtos"
            android:theme="@style/TabAppTheme.NoActionBar" />
        <activity
            android:name=".tela.manager.fornecedor.TelaFornecedor"
            android:label="Gerenciar Fornecedores"
            android:theme="@style/TabAppTheme.NoActionBar" />
        <activity
            android:name=".tela.manager.loja.TelaLoja"
            android:label="Gerenciar Lojas"
            android:theme="@style/TabAppTheme.NoActionBar" />
        <activity
            android:name=".tela.manager.contagem.AlterarDeletarContagem"
            android:label="@string/title_activity_alterar_deletar_contagem"
            android:theme="@style/TabAppTheme.NoActionBar" />
        <activity
            android:name=".tela.manager.fornecedor.AlterarDeletarFornecedor"
            android:label="@string/title_activity_alterar_deletar_fornecedor"
            android:theme="@style/TabAppTheme.NoActionBar" />
        <activity
            android:name=".tela.manager.loja.AlterarDeletarLoja"
            android:label="@string/title_activity_alterar_deletar_loja"
            android:theme="@style/TabAppTheme.NoActionBar" />
        <activity
            android:name=".tela.manager.produto.AlterarDeletarProduto"
            android:label="@string/title_activity_alterar_deletar_produto"
            android:theme="@style/TabAppTheme.NoActionBar" />
        <activity
            android:name=".tela.manager.contagem.AdicionarContagemProduto"
            android:label="@string/title_activity_adicionar_contagem_produto"
            android:theme="@style/TabAppTheme.NoActionBar" />
        <activity
            android:name=".tela.manager.contagem.VisualizarProdutosContagem"
            android:label="@string/title_activity_visualizar_produtos_contagem"
            android:theme="@style/TabAppTheme.NoActionBar" />
        <activity
            android:name=".tela.ActivityBase"
            android:label="@string/title_activity_base"
            android:theme="@style/TabAppTheme.NoActionBar" />
        <activity android:name="net.rdrei.android.dirchooser.DirectoryChooserActivity" />

        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="barcode" />

        <activity
            android:name=".tela.manager.fornecedor.CadastrarFornecedorSemInternetContainer"
            android:label="Cadastrar Fornecedor"
            android:theme="@style/TabAppTheme.NoActionBar" />

        <activity
            android:name=".tela.manager.contagem.PesquisaContagemProdutoContainer"
            android:label="@string/title_activity_pesquisa_contagem_produto_container"
            android:theme="@style/TabAppTheme.NoActionBar" />

        <activity
            android:name=".tela.manager.fornecedor.AlterarFornecedorEmProdutoContainer"
            android:label="Produto: Alterar Fornecedor"
            android:theme="@style/TabAppTheme.NoActionBar" />

        <activity
            android:name=".tela.manager.fornecedor.TelaFornecedorForResult"
            android:label="Produto: Escolher Fornecedor"
            android:theme="@style/TabAppTheme.NoActionBar" />

        <activity android:name=".tela.manager.marca.TelaMarca"
            android:label="Gerenciar Marcas"
            android:theme="@style/TabAppTheme.NoActionBar"  />

        <activity android:name=".tela.manager.marca.AlterarDeletarMarca"
            android:label="Marca: alterar ou deletar"
            android:theme="@style/TabAppTheme.NoActionBar"/>

    </application>

</manifest>