<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Desenha primeiro retângulo com bordas pretas e fundo transparente-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke
                android:width="1sp"
                android:color="#000" />
        </shape>
    </item>

    <!--Desenha segundo retângulo por cima do anterior. Têm bordas brancas e fundo transparente.
    Descolado 1sp para cima para não encobrir borda inferior do primeiro retângulo, que é o queremos que apareça -->
    <item android:bottom="1sp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
            <stroke
                android:width="1sp"
                android:color="#FAFAFA" />
        </shape>
    </item>
</layer-list>