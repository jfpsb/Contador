<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dip"
    android:orientation="vertical"
    tools:context="com.vandamodaintima.jfpsb.contador.tela.manager.produto.PesquisarProduto">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pesquisar Por:"
                android:textColor="#000000"
                android:textSize="22sp" />
        </TableRow>

        <TableRow>

            <RadioGroup
                android:id="@+id/radioGroupOpcao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbCodBarra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Cod. Barra"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rbFornecedor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fornecedor"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rbDescricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descrição"
                    android:textSize="16dp" />
            </RadioGroup>
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/txtPesquisaProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/hintRadioButtonCodBarra"
                android:inputType="number" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:layout_weight="2"
                android:text="Produtos Listados:"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txtQuantProdutosCadastrados"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24dp" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cod. Barra"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Descrição"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Preço"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow>

            <ListView
                android:id="@+id/listViewProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></ListView>
        </TableRow>
    </TableLayout>
</LinearLayout>
