<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip">

        <TableRow android:weightSum="1">
            <TextView android:text="@string/dados_de_fornecedor"
                android:textSize="28sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#000000" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cnpj_dois_pontos"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="22sp" />
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/txtCnpj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:inputType="number"
                android:textSize="20sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/nome_dois_pontos"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="22sp" />
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/txtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fantasia_dois_pontos"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="22sp" />
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/txtFantasia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/email_dois_pontos"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="22sp" />
        </TableRow>
        <TableRow>
            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="20sp" />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/btnAtualizar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/atualizar"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDeletar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/deletar"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>
    </ScrollView>
</LinearLayout>
