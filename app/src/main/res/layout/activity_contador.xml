<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vandamodaintima.jfpsb.contador.Contador">

    <Button
        android:id="@+id/btnContador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:background="@drawable/botao_administracao"
        android:drawableStart="@drawable/estoque"
        android:padding="30sp"
        android:text="@string/contador"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:background="@drawable/botao_administracao"
        android:drawableStart="@drawable/produto_small"
        android:padding="30sp"
        android:text="@string/produto"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFornecedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:background="@drawable/botao_administracao"
        android:drawableStart="@drawable/fornecedor_small"
        android:padding="30sp"
        android:text="@string/fornecedor"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnLoja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2sp"
        android:background="@drawable/botao_administracao"
        android:drawableStart="@drawable/loja_small"
        android:padding="30sp"
        android:text="@string/loja"
        android:textSize="22sp"
        android:textStyle="bold" />

</LinearLayout>
