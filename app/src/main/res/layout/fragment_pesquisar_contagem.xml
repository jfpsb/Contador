<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="7dip"
    tools:context="com.vandamodaintima.jfpsb.contador.tela.manager.PesquisarContagem">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dip">

        <TableRow android:layout_weight="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Loja:"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerLoja"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_weight="7" android:layout_marginTop="7dip">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Intervalo:"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_weight="2"/>

            <EditText
                android:id="@+id/txtDataInicial"
                android:hint="@string/data_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

            <TextView
                android:text="a"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textAlignment="center"/>

            <EditText
                android:id="@+id/txtDataFinal"
                android:hint="@string/data_hint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button android:id="@+id/btnPesquisar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Pesquisar"
            android:textSize="24dp"
            android:layout_weight="1"/>

        <Button android:id="@+id/btnPesquisarTodos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pesquisar Todos"
            android:textSize="24dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="10dip">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID da Contagem"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Data Inicial"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_weight="1"/>
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewLoja"
        android:layout_margin="10dip" >
    </ListView>

</LinearLayout>
