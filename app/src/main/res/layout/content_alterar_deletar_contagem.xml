<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:layout_weight="1">
            <TextView android:text="Dados de Contagem"
                android:textSize="24dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:layout_marginTop="5dip"/>
        </TableRow>

        <TableRow android:layout_weight="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ID da Contagem:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtIDContagem"
                android:enabled="false"
                android:textSize="24dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow android:layout_weight="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Loja Atual:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtLojaAtual"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAlignment="center"
                android:enabled="false"/>
        </TableRow>
        <TableRow android:layout_weight="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alterar Loja Para:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerLoja"
                android:textColor="#000000"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_weight="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Data Inicial:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtDataInicial"
                android:hint="@string/data_hint"
                android:textColor="#000000"
                android:enabled="false"
                android:layout_weight="1"
                android:textAlignment="center" />
        </TableRow>
        <TableRow android:layout_weight="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Data Final:"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_weight="2"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtDataFinal"
                android:hint="@string/data_hint"
                android:textColor="#000000"
                android:layout_weight="2"
                android:textAlignment="center"
                android:enabled="false"/>

            <CheckBox
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alterar"
                android:id="@+id/checkBoxDataFinal"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Atualizar"
            android:id="@+id/btnAtualizar"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deletar"
            android:textColor="#FF0000"
            android:id="@+id/btnDeletar"/>
    </LinearLayout>

</LinearLayout>
