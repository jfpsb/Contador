<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip">

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="28sp"
                android:text="Dados de Produto"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cód. de Barra:"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_weight="1" />
        </TableRow>
        <TableRow>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:id="@+id/txtCodBarra" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fornecedor Atual:"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:enabled="false"
                android:id="@+id/txtFornecedorAtual"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alterar Fornecedor Para:"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:id="@+id/spinnerFornecedor"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição:"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:id="@+id/txtDescricao" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preço:"
                android:textColor="#000"
                android:textSize="24sp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000"
                android:layout_weight="1"
                android:id="@+id/txtPreco"
                android:inputType="number" />
        </TableRow>

        <TableRow>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Atualizar"
                android:id="@+id/btnAtualizar"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Deletar"
                android:textColor="#FF0000"
                android:id="@+id/btnDeletar"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
