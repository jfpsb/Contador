<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip">

        <TableRow android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="24dp"
                android:text="Dados de Produto"
                android:textAlignment="center"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cód. de Barra:"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_weight="1"
                android:enabled="false"
                android:textAlignment="center"
                android:id="@+id/txtCodBarra"/>
        </TableRow>

        <TableRow android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Fornecedor Atual:"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_weight="1"
                android:enabled="false"
                android:textAlignment="center"
                android:id="@+id/txtFornecedorAtual"/>
        </TableRow>

        <TableRow android:weightSum="5">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Alterar Fornecedor Para:"
                android:textAlignment="textStart"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_weight="3"/>

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_weight="2"
                android:enabled="false"
                android:textAlignment="center"
                android:id="@+id/spinnerFornecedor"/>
        </TableRow>

        <TableRow android:weightSum="3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Descrição:"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_weight="2"
                android:textAlignment="center"
                android:id="@+id/txtDescricao"
                android:minLines="2"/>
        </TableRow>

        <TableRow android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Preço:"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_weight="1"
                android:textAlignment="center"
                android:id="@+id/txtPreco"
                android:inputType="number"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Atualizar"
            android:id="@+id/btnAtualizar"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deletar"
            android:textColor="#FF0000"
            android:id="@+id/btnDeletar"/>
    </LinearLayout>
</LinearLayout>
