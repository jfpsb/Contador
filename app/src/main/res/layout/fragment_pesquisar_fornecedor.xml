<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dip"
    tools:context="com.vandamodaintima.jfpsb.contador.tela.manager.PesquisarFornecedor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite abaixo:"
        android:textSize="24sp"
        android:textColor="#000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPesquisaFornecedor"
        android:hint="@string/txtPesquisaFornecedor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="10dip">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CNPJ"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_weight="1" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewLoja"
        android:layout_margin="10dip">
    </ListView>

</LinearLayout>
