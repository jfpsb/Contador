<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dip"
    tools:context="com.vandamodaintima.jfpsb.contador.view.fornecedor.PesquisarFornecedor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/digite_abaixo_dois_pontos"
        android:textSize="24sp"
        android:textColor="#000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPesquisaFornecedor"
        android:hint="@string/hint_cnpj_nome_ou_fantasia"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/cnpj"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textAlignment="center"
                />
        </TableRow>
        <TableRow
            android:layout_weight="2"
            android:background="@drawable/item_lista_linha_inferior">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/nome"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/fantasia"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_weight="1"
                />
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/listViewLoja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart">
    </ListView>

</LinearLayout>
