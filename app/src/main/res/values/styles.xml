<resources>

    <!-- Tema base do app, configura a fonte em Century Gothic -->
    <style name="TabAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:textColor">#000</item>
    </style>

    <!-- Remove a barra superior, usado no manifest -->
    <style name="TabAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextoTab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuItemTextAppearance" parent="TextAppearance.AppCompat.Menu">
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- No estilo acima nÃ£o funciona -->
    <style name="MenuItemTextStyle">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BtnGreen" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:height">60sp</item>
        <item name="android:background">@drawable/botao_active</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BtnCadastrar" parent="BtnGreen">
        <item name="android:text">Cadastrar</item>
    </style>

    <style name="BtnAtualizar" parent="BtnGreen">
        <item name="android:text">Atualizar</item>
    </style>

    <style name="BtnPesquisar" parent="BtnGreen">
        <item name="android:text">Pesquisar</item>
    </style>

</resources>
